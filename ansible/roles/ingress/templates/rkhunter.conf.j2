# Rkhunter configuration
# Managed by Ansible - do not edit manually

# Update mirrors
UPDATE_MIRRORS=1
MIRRORS_MODE=0
WEB_CMD=""

# Mail settings
MAIL_ON_WARNING="{{ rkhunter_email }}"
MAIL_CMD="mail -s \"[rkhunter] Warnings found on {{ inventory_hostname }}\""

# Database directory
DBDIR=/var/lib/rkhunter/db
SCRIPTDIR=/usr/share/rkhunter/scripts
TMPDIR=/var/lib/rkhunter/tmp

# Package manager
PKGMGR=DPKG

# Allow some known safe hidden directories
ALLOWHIDDENDIR=/etc/.java
ALLOWHIDDENDIR=/dev/.udev
ALLOWHIDDENDIR=/dev/.static
ALLOWHIDDENDIR=/dev/.lxc

# Allow hidden files that are legitimate
ALLOWHIDDENFILE=/etc/.gitignore
ALLOWHIDDENFILE=/etc/.pwd.lock

# SSH root login check
ALLOW_SSH_ROOT_USER=without-password

# Protocol version check
ALLOW_SSH_PROT_V1=0

# Syslog remote logging
ALLOW_SYSLOG_REMOTE_LOGGING=0

# Skip some tests that generate false positives on Ubuntu
DISABLE_TESTS=suspscan hidden_procs deleted_files packet_cap_apps apps

# Hash function to use
HASH_FUNC=SHA256

# Log file settings
LOGFILE=/var/log/rkhunter.log
USE_SYSLOG=authpriv.warning
APPEND_LOG=0

# Installation directory
INSTALLDIR=/usr
